<table class="table table-striped">
  <thead>
    <tr> 
    <th>Name  </th>
    <th>Symbol</th>
    <th>Current price</th>
    <% if @user.id == current_user.id %>
    <th> Actions</th>
    <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user.stocks.each do |t| %>
    <tr> 
    <td><%= t.name %> </td>
    <td><%= t.ticker %></td>
    <td><%= t.price %> </td>
    <% if @user.id == current_user.id %>
    <td><%= link_to 'Delete',user_stock_path(t),method: :delete,data: {confirm: "Sure?"},
    class: "btn btn-xs btn-danger" %> </td>
   <% end %> 
    </tr>
    <% end %>
  </tbody>
</table>